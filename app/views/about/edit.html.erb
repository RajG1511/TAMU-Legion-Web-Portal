<% content_for :title, "Edit About Us" %>

<!-- Top Heading -->
<div class="container-fluid bg-dark-navy text-white py-3">
  <h1 class="text-center font-primary-title">Edit About Us Page</h1>
</div>

<!-- Main Body -->
<div class="container-fluid bg-gold py-2">
  <div class="row">

    <!-- LEFT: Form -->
    <div class="col-md-7 bg-white text-dark-navy p-4">
      <%= form_with url: about_path, method: :patch, local: true do |f| %>
        <div class="overflow-auto pe-2 edit-scroll-container" style="max-height: 75vh; margin-left: 3vw;">

          <!-- WHAT IS LEGION -->
          <div class="edit-card p-4 mb-4">
            <h3 class="font-primary-title mb-2 text-white">What is LEGION?</h3>
            <p class="text-gold mb-0 font-primary-heading"><strong>Edit Title & Body</strong></p>
            <p class="text-white mb-0 font-secondary-body"><strong>Body accepts HTML</strong></p>

            <div class="mt-3">
              <label class="font-secondary-subheading mb-2 text-white">Title</label>
              <%= text_field_tag "about_page[what_is_title]", @sections["what_is_title"], class: "form-control default-border-radius edit-textarea font-secondary-subheading" %>
            </div>
            <div class="mt-3">
              <label class="font-secondary-subheading mb-2 text-white">Body (HTML)</label>
              <%= text_area_tag "about_page[what_is_body_html]", @sections["what_is_body_html"], rows: 6, class: "form-control default-border-radius edit-textarea font-secondary-subheading" %>
            </div>
          </div>

          <!-- FACTS -->
          <div class="edit-card p-4 mb-4">
            <h3 class="font-primary-title mb-2 text-white">Fast Facts</h3>
            <p class="text-gold mb-0 font-primary-heading"><strong>Edit Title & Facts</strong></p>

            <div class="mt-3">
              <label class="font-secondary-subheading mb-2 text-white">Title</label>
              <%= text_field_tag "about_page[facts_title]", @sections["facts_title"], class: "form-control default-border-radius edit-textarea font-secondary-subheading" %>
            </div>
            <div class="mt-3">
              <label class="font-secondary-subheading mb-2 text-white">Fact 1</label>
              <%= text_field_tag "about_page[fact_1]", @sections["fact_1"], class: "form-control default-border-radius edit-textarea font-secondary-subheading mb-2" %>

              <label class="font-secondary-subheading mb-2 text-white">Fact 2</label>
              <%= text_field_tag "about_page[fact_2]", @sections["fact_2"], class: "form-control default-border-radius edit-textarea font-secondary-subheading mb-2" %>

              <label class="font-secondary-subheading mb-2 text-white">Fact 3</label>
              <%= text_field_tag "about_page[fact_3]", @sections["fact_3"], class: "form-control default-border-radius edit-textarea font-secondary-subheading" %>
            </div>
          </div>

          <!-- PILLARS -->
          <div class="edit-card p-4 mb-4">
            <h3 class="font-primary-title mb-2 text-white">Our Pillars</h3>
            <p class="text-gold mb-0 font-primary-heading"><strong>Edit Title & Pillars</strong></p>

            <div class="mt-3">
              <label class="font-secondary-subheading mb-2 text-white">Title</label>
              <%= text_field_tag "about_page[pillars_title]", @sections["pillars_title"], class: "form-control default-border-radius edit-textarea font-secondary-subheading" %>
            </div>
            <div class="mt-3">
              <label class="font-secondary-subheading mb-2 text-white">Pillar 1</label>
              <%= text_field_tag "about_page[pillar_1]", @sections["pillar_1"], class: "form-control default-border-radius edit-textarea font-secondary-subheading mb-2" %>

              <label class="font-secondary-subheading mb-2 text-white">Pillar 2</label>
              <%= text_field_tag "about_page[pillar_2]", @sections["pillar_2"], class: "form-control default-border-radius edit-textarea font-secondary-subheading mb-2" %>

              <label class="font-secondary-subheading mb-2 text-white">Pillar 3</label>
              <%= text_field_tag "about_page[pillar_3]", @sections["pillar_3"], class: "form-control default-border-radius edit-textarea font-secondary-subheading" %>
            </div>
          </div>

        </div>

        <!-- Actions -->
        <div class="d-flex justify-content-start gap-3 mt-4" style="margin-left: 3vw;">
          <%= f.submit "Save", class: "btn btn-gold text-dark-navy font-secondary-body default-border-radius" %>
          <%= link_to "Cancel", about_path, class: "btn btn-gold text-dark-navy font-secondary-body default-border-radius" %>
        </div>
      <% end %>
    </div>

    <!-- RIGHT: Guide / Log -->
    <div class="col-md-5 bg-legion-blue text-white p-4">

      <div style="padding-left: 3vw; padding-right: 3vw;">
        <button type="button" class="btn white-btn-edit mb-3 default-border-radius btn-lg font-primary-heading w-100"
                data-bs-toggle="modal" data-bs-target="#UserGuideModal">
          User Guide: Editing About Us Page
        </button>
      </div>

      <div class="table-responsive log-scroll-container" style="max-height: 75vh; overflow-y: auto; padding-left: 3vw; padding-right: 3vw;">
        <table class="table table-bordered table-striped border-white">
          <thead>
            <tr>
              <th colspan="3" class="bg-white text-dark text-center h5 font-secondary-heading">Update Log</th>
            </tr>
            <tr>
              <th class="bg-legion-blue text-white font-secondary-body border-white">Section</th>
              <th class="bg-legion-blue text-white font-secondary-body border-white">Updated By</th>
              <th class="bg-legion-blue text-white font-secondary-body border-white">Timestamp</th>
            </tr>
          </thead>
          <tbody>
            <% (@about_versions || []).each do |version| %>
              <tr>
                <td class="font-secondary-subheading">Placeholder Section</td>
                <td class="font-secondary-subheading">Placeholder User</td>
                <td class="font-secondary-subheading">Placeholder Timestamp</td>
              </tr>
            <% end %>
            <% if @about_versions.blank? %>
              <tr>
                <td colspan="3" class="text-center font-secondary-subheading text-light">No updates logged yet.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade edit-info-modal" id="UserGuideModal" tabindex="-1" aria-labelledby="UserGuideModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title font-primary-heading" id="UserGuideModalLabel">About Us Edit Guide</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body font-secondary-subheading">
        <p>Use this form to update the About Us content. Title fields accept plaintext; the main body accepts HTML.</p>
        <h6 class="font-secondary-body text-gold mt-4">Tips</h6>
        <ul class="font-secondary-subheading">
          <li>Save changes at the bottom to publish to the public About page.</li>
          <li>Validation restricts unsafe HTML.</li>
        </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-gold text-dark-navy font-secondary-body" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

