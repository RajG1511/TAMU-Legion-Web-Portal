    <%= image_tag "/Photos/Nature.jpg",     class: "about__mosaic-img" %>
    <%# Add/duplicate any others you placed in /public/Photos %>
    <%= image_tag "/Photos/House.jpg",      class: "about__mosaic-img" %>
    <%= image_tag "/Photos/MiniHouse.jpg",  class: "about__mosaic-img" %>
    <%= image_tag "/Photos/Nature.jpg",     class: "about__mosaic-img" %>
    <%= image_tag "/Photos/House.jpg",      class: "about__mosaic-img" %>
    <%= image_tag "/Photos/MiniHouse.jpg",  class: "about__mosaic-img" %>

    <%# Blue overlay to match the Wix monochrome effect %>
    <div class="about__mosaic-overlay"></div>
  </div>
</section>

