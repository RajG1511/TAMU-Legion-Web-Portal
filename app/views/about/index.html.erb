<% content_for :title, "About Us" %>

<div class="wix-top-line"></div>

<!-- Top Heading -->
<div class="container-fluid bg-dark-gray-blue text-white py-3">
  <h1 class="text-center font-primary-title">About Us</h1>
</div>
<div class="container-fluid bg-gold py-1"></div>

<!-- Main Body -->
<div class="container-fluid bg-dark-navy text-white pt-4 pb-5">
  <div class="default-padding">

    <!-- WHAT IS LEGION -->
    <section class="mb-5">
      <h2 class="font-primary-heading"><%= cms_text(:what_is_title, page: :about) %></h2>
      <hr class="thick-white-divider">
      <div class="font-secondary-subheading">
        <%= cms_html(:what_is_body_html, page: :about) %>
      </div>
    </section>

    <!-- FAST FACTS -->
    <section class="mb-5">
      <h2 class="font-primary-heading"><%= cms_text(:facts_title, page: :about) %></h2>
      <hr class="thick-white-divider">
      <ul class="font-secondary-subheading m-0 ps-3">
        <li class="mb-1"><%= cms_text(:fact_1, page: :about) %></li>
        <li class="mb-1"><%= cms_text(:fact_2, page: :about) %></li>
        <li class="mb-1"><%= cms_text(:fact_3, page: :about) %></li>
      </ul>
    </section>

    <!-- OUR PILLARS -->
    <section>
      <h2 class="font-primary-heading"><%= cms_text(:pillars_title, page: :about) %></h2>
      <hr class="thick-white-divider">
      <ul class="font-secondary-subheading m-0 ps-3">
        <li class="mb-1"><%= cms_text(:pillar_1, page: :about) %></li>
        <li class="mb-1"><%= cms_text(:pillar_2, page: :about) %></li>
        <li class="mb-1"><%= cms_text(:pillar_3, page: :about) %></li>
      </ul>
    </section>

  </div>
</div>

<!-- Edit CTA (execs only) -->
<% if current_user&.exec? %>
  <div class="container-fluid bg-gold py-3">
    <div class="text-center">
      <%= link_to "Edit About Page", edit_about_path, class: "btn white-btn-edit default-border-radius btn-lg font-primary-heading" %>
    </div>
  </div>
<% end %>

