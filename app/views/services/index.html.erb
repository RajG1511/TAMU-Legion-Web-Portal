<h1>Pending Service Requests</h1>

<% if notice.present? %>
  <p style="color: green;"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p style="color: red;"><%= alert %></p>
<% end %>

<% if @services.blank? %>
  <p>No pending service requests.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Submitter</th>
        <th>Name</th>
        <th>Description</th>
        <th>Hours</th>
        <th>Date performed</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @services.each do |service| %>
        <tr>
          <td><%= service.user&.email || "Unknown" %></td>
          <td><%= service.name %></td>
          <td><%= service.description %></td>
          <td><%= service.hours %></td>
          <td><%= service.date_performed %></td>
          <td><%= service.status %></td>
          <td>
            <%= button_to "Approve",
                          approve_service_path(service),
                          method: :patch,
                          form: { data: { turbo_confirm: "Approve this request?" } } %>
            <%= button_to "Reject",
                          reject_service_path(service),
                          method: :patch,
                          form: { data: { turbo_confirm: "Reject this request?" } },
                          class: "danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>