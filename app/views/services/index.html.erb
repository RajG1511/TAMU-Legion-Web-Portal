<h1>My Service Requests</h1>

<% if notice.present? %>
  <p style="color: green;"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p style="color: red;"><%= alert %></p>
<% end %>

<% if @services.blank? %>
  <p>You have no service requests.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Hours</th>
        <th>Date performed</th>
        <th>Committee</th>
        <th>Status</th>
        <th>Rejection Reason</th>
      </tr>
    </thead>
    <tbody>
      <% @services.each do |service| %>
        <tr>
          <td><%= service.name %></td>
          <td><%= service.description %></td>
          <td><%= service.hours %></td>
          <td><%= service.date_performed %></td>
          <td><%= service.committee.present? ? service.committee.titleize : "—" %>
          <td><%= service.status %></td>
          <td>
            <% if service.rejected? %>
              <%= service.rejection_reason.presence || "No reason provided" %>
            <% else %>
              —
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to "Submit New Service Request", new_service_path %>