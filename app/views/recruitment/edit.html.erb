<% content_for :title, "Edit Recruitment" %>

<div class="container-xl py-4">
  <h1 class="mb-3">Edit Recruitment Page</h1>

  <%= form_with url: update_recruitment_path, method: :patch, scope: :recruitment_page, class: "row g-4" do |f| %>
    <div class="col-12 col-lg-6">
      <div class="mb-3">
        <%= f.label :hero_title, "Hero Title", class: "form-label" %>
        <%= f.text_field :hero_title, value: @sections["hero_title"], class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :hero_tagline_html, "Hero Tagline (HTML allowed)", class: "form-label" %>
        <%= f.text_area :hero_tagline_html, value: @sections["hero_tagline_html"], class: "form-control", rows: 4 %>
      </div>

      <div class="mb-3">
        <%= f.label :apply_url, "Apply URL", class: "form-label" %>
        <%= f.url_field :apply_url, value: @sections["apply_url"], class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :groupme_url, "GroupMe URL", class: "form-label" %>
        <%= f.url_field :groupme_url, value: @sections["groupme_url"], class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :contact_email, "Contact Email", class: "form-label" %>
        <%= f.email_field :contact_email, value: @sections["contact_email"], class: "form-control" %>
      </div>
    </div>

    <div class="col-12 col-lg-6">
      <div class="mb-3">
        <%= f.label :body_html, "Optional Body (HTML allowed)", class: "form-label" %>
        <%= f.text_area :body_html, value: @sections["body_html"], class: "form-control", rows: 14 %>
      </div>
    </div>

    <div class="col-12">
      <%= f.submit "Save", class: "btn btn-gold" %>
      <%= link_to "Cancel", recruitment_path, class: "btn btn-secondary ms-2" %>
    </div>
  <% end %>
</div>

