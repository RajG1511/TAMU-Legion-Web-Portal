<% content_for :title, "Contact Us" %>

<div class="wix-top-line"></div>

<!-- Top Heading -->
<div class="container-fluid bg-dark-gray-blue text-white py-3">
  <h1 class="text-center font-primary-title"><%= cms_text(:hero_title, page: :contact) %></h1>
</div>
<div class="container-fluid bg-gold py-1"></div>

<!-- Main Body -->
<div class="container-fluid bg-dark-navy text-white pt-4 pb-5">
  <div class="default-padding">

    <!-- MEETINGS -->
    <section class="mb-5">
      <h2 class="font-primary-heading"><%= cms_text(:meetings_title, page: :contact) %></h2>
      <hr class="thick-white-divider">
      <div class="font-secondary-subheading mb-2">
        <%= cms_html(:meetings_body_html, page: :contact) %>
      </div>
      <p class="font-secondary-subheading mb-1">
        <strong>Location:</strong>
        <%= cms_text(:meetings_location, page: :contact) %>
      </p>
      <p class="font-secondary-subheading mb-2">
        <a class="text-gold" href="<%= cms_text(:meetings_location_url, page: :contact) %>">View Location on an Interactive Map</a>
      </p>
      <div class="font-secondary-subheading">
        <%= cms_html(:meetings_additional_html, page: :contact) %>
      </div>
    </section>

    <!-- GENERAL QUESTIONS -->
    <section class="mb-5">
      <h2 class="font-primary-heading"><%= cms_text(:questions_title, page: :contact) %></h2>
      <hr class="thick-white-divider">
      <div class="font-secondary-subheading mb-3">
        <%= cms_html(:questions_body_html, page: :contact) %>
      </div>
      <%= link_to cms_text(:questions_button_label, page: :contact),
                  cms_text(:questions_button_url, page: :contact),
                  class: "btn white-btn-edit default-border-radius font-primary-heading" %>
    </section>

    <!-- EMAIL LIST -->
    <section>
      <h2 class="font-primary-heading"><%= cms_text(:email_list_title, page: :contact) %></h2>
      <hr class="thick-white-divider">
      <div class="font-secondary-subheading mb-3">
        <%= cms_html(:email_list_body_html, page: :contact) %>
      </div>
      <%= link_to cms_text(:email_list_button_label, page: :contact),
                  cms_text(:email_list_button_url, page: :contact),
                  class: "btn white-btn-edit default-border-radius font-primary-heading" %>
    </section>

  </div>
</div>

<!-- Edit CTA (execs only) -->
<% if current_user&.exec? %>
  <div class="container-fluid bg-gold py-3">
    <div class="text-center">
      <%= link_to "Edit Contact Page", edit_contact_path, class: "btn white-btn-edit default-border-radius btn-lg font-primary-heading" %>
    </div>
  </div>
<% end %>

