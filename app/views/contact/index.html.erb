<% content_for :title, "Contact" %>

<div class="wix-top-line"></div>

<!-- HERO -->
<section class="contact-hero">
  <div class="contact-hero__inner">
    <h1 class="contact-hero__title"><%= cms_text(:hero_title, page: :contact) %></h1>
  </div>

  <!-- Wix hero image -->
  <div class="contact-hero-photo-block">
    <img src="/Photos/Nature.jpg" class="contact-hero-photo" alt="LEGION photo">
  </div>
</section>

<!-- MEETING INFO -->
<section class="contact-meetings">
  <div class="contact-meetings__content">
    <h2 class="contact-meetings__title"><%= cms_text(:meetings_title, page: :contact) %></h2>
    <p class="contact-meetings__body"><%= cms_html(:meetings_body_html, page: :contact) %></p>
    <p class="contact-meetings__location"><%= cms_text(:meetings_location, page: :contact) %></p>
    <p class="contact-meetings__map">
      <a class="contact-meetings__location-link" href="<%= cms_text(:meetings_location_url, page: :contact) %>">View Location on Map</a>
    </p>

    <!-- accent image -->
    <img src="/Photos/House.jpg" class="contact-accent-photo">
  </div>
</section>

<!-- GENERAL QUESTIONS -->
<section class="contact-questions">
  <div class="contact-questions__content">
    <h2 class="contact-questions__title"><%= cms_text(:questions_title, page: :contact) %></h2>
    <p class="contact-questions__body"><%= cms_html(:questions_body_html, page: :contact) %></p>
    <p class="contact-questions__cta">
      <a class="white-btn-edit contact-cta-btn" href="<%= cms_text(:questions_button_url, page: :contact) %>"><%= cms_text(:questions_button_label, page: :contact) %></a>
    </p>
  </div>
</section>

<!-- EMAIL LIST -->
<section class="contact-list">
  <div class="contact-list__content">
    <h2 class="contact-list__title"><%= cms_text(:email_list_title, page: :contact) %></h2>
    <p class="contact-list__body"><%= cms_html(:email_list_body_html, page: :contact) %></p>
    <p class="contact-list__cta">
      <a class="white-btn-edit contact-cta-btn" href="<%= cms_text(:email_list_button_url, page: :contact) %>"><%= cms_text(:email_list_button_label, page: :contact) %></a>
    </p>

    <!-- bottom image -->
    <img src="/Photos/MiniHouse.jpg" class="contact-bottom-photo">
  </div>
</section>

<% if current_user&.exec? %>
  <section class="contact-edit">
    <%= link_to "Edit Contact Page", edit_contact_path, class: "btn btn-outline-light" %>
  </section>
<% end %>

