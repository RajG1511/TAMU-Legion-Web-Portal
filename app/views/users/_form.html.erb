<div class="container-fluid bg-dark-navy text-white min-vh-100 px-0">
  <div class="container-fluid bg-dark-gray-blue text-white py-3">
    <h2 class="text-center font-primary-title"><%= @user.persisted? ? "Update a Member" : "Create a Member" %></h2>
  </div>
  <div class="container-fluid bg-gold py-1"></div>

  <div class="container my-4 p-4 border border-4 border-white bg-dark-navy text-white default-border-radius">
    <%= form_with model: @user, local: true do |f| %>

      <% if @user.errors.any? %>
        <div class="container-fluid bg-gold text-dark-navy py-2 mb-3">
          <p class="text-center mb-0 h5">Please fill out all required fields.</p>
        </div>
      <% end %>

      <!-- Section 1 -->
      <div class="row mb-4">
        <div class="col-md-6">
          <%= f.label :first_name, "First name", class: "form-label font-primary-heading mb-1 me-2" %>
          <%= f.text_field :first_name, class: "form-control form-dark default-border-radius font-secondary-subheading" %>
        </div>
        <div class="col-md-6">
          <%= f.label :last_name, "Last name", class: "form-label font-primary-heading mb-1 me-2" %>
          <%= f.text_field :last_name, class: "form-control form-dark default-border-radius font-secondary-subheading" %>
        </div>
      </div>

      <!-- Section 2 -->
      <div class="row mb-4">
        <div class="col-md-6">
          <%= f.label :email, "Email", class: "form-label font-primary-heading mb-1 me-2" %>
          <%= f.email_field :email, class: "form-control form-dark default-border-radius font-secondary-subheading" %>
        </div>
        <div class="col-md-6">
          <%= f.label :position, "Position", class: "form-label font-primary-heading mb-1 me-2" %>
          <%= f.text_field :position, class: "form-control form-dark default-border-radius font-secondary-subheading" %>
        </div>
      </div>

      <!-- Section 3 -->
      <div class="row mb-4">
        <div class="col-md-4">
          <%= f.label :graduation_year, "Graduation Year", class: "form-label font-primary-heading mb-1 me-2" %>
          <%= f.number_field :graduation_year, class: "form-control form-dark default-border-radius font-secondary-subheading" %>
        </div>
        <div class="col-md-4">
          <%= f.label :major, "Major", class: "form-label font-primary-heading mb-1 me-2" %>
          <%= f.text_field :major, class: "form-control form-dark default-border-radius font-secondary-subheading" %>
        </div>
        <div class="col-md-4">
          <%= f.label :t_shirt_size, "T-Shirt Size", class: "form-label font-primary-heading mb-1 me-2" %>
          <%= f.select :t_shirt_size, %w[XS S M L XL XXL XXXL], { include_blank: true }, class: "form-select form-dark default-border-radius font-secondary-subheading" %>
        </div>
      </div>

      <!-- Section 4: Role/Status (exec/president) -->
      <div class="row mb-4">
        <% if current_user&.exec? %>
          <div class="col-md-4">
            <%= f.label :status, "Status", class: "form-label font-primary-heading mb-1 me-2" %>
            <%= f.select :status, User.statuses.keys.map { |s| [s.humanize, s] }, {}, class: "form-select form-dark default-border-radius font-secondary-subheading" %>
          </div>
        <% end %>
        <% if current_user&.president? %>
          <div class="col-md-4">
            <%= f.label :role, "Role", class: "form-label font-primary-heading mb-1 me-2" %>
            <%= f.select :role, User.roles.keys.map { |r| [r.humanize, r] }, {}, class: "form-select form-dark default-border-radius font-secondary-subheading" %>
          </div>
        <% end %>
        <div class="col-md-8">
          <%= f.label :headshot, "Member Photo", class: "form-label font-primary-heading mb-1 me-2" %>
          <%= f.file_field :headshot, class: "form-control form-dark default-border-radius font-secondary-subheading" %>
          <% if @user.headshot.attached? %>
            <label class="mt-2 font-secondary-body">
              <%= check_box_tag "user[remove_headshot]", "1" %> Remove current headshot
            </label>
          <% end %>
        </div>
      </div>

      <!-- Submit / Back -->
      <div class="d-flex justify-content-start gap-2 mt-4">
        <%= f.submit (@user.persisted? ? "Update Member" : "Create Member"), class: "btn btn-gold text-dark-navy default-border-radius font-primary-heading" %>
        <%= link_to "â† Back to Dashboard", users_path, class: "btn btn-gold text-dark-navy default-border-radius font-primary-heading" %>
      </div>
    <% end %>
  </div>

  <div class="container-fluid bg-gold py-1"></div>
</div>

