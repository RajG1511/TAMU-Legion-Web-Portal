<h1>Users</h1>

<p>
    <%= link_to 'New User', new_user_path %>
</p>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Position</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= link_to user.full_name, user_path(user) %></td>
                <td><%= user.email %></td>
                <td><%= user.position %></td>
                <td><%= user.status.humanize %></td>
            </tr>
        <% end %>
    </tbody>
</table>