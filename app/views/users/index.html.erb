<!-- Header (matches Service Dashboard) -->
<div class="container-fluid bg-dark-gray-blue text-white py-3">
  <div class="d-flex align-items-center justify-content-between px-3">
    <h1 class="m-0 font-primary-title">Members Dashboard</h1>

    <div class="d-flex gap-2">
      <% toggle_to   = (@show_inactive ? 0 : 1) %>
      <% toggle_text = (@show_inactive ? "Hide inactive users" : "Show inactive users") %>
      <% toggle_cls  = (@show_inactive ? "btn btn-gold text-dark-navy" : "btn white-btn-edit") %>

      <%= link_to toggle_text,
                  users_path(show_inactive: toggle_to, q: params[:q]),
                  class: "#{toggle_cls} default-border-radius" %>

      <%= link_to 'Create User',
                  new_user_path,
                  class: "btn btn-gold default-border-radius" %>
    </div>
  </div>
</div>

<hr class="gold-divider my-0">

<!-- FULL-BLEED BODY (NO gold background, NO max width) -->
<div class="container-fluid bg-dark-navy py-4">
  <div class="row g-0">

    <!-- LEFT COLUMN (log + actions) -->
    <div class="col-md-5 bg-legion-blue text-white py-4 min-vh-100">
      <div class="default-padding-left">

        <div class="d-grid gap-3 px-4 mt-4 mb-4">
          <%= link_to "Create User",
                      new_user_path,
                      class: "btn white-btn-edit default-border-radius btn-lg w-100 font-primary-heading" %>

          <%= button_to "Reset All Inactive",
                        reset_inactive_users_path,
                        method: :post,
                        class: "btn white-btn-edit default-border-radius btn-lg w-100 font-primary-heading",
                        data: { confirm: "Reset all inactive to active?" } %>

          <button type="button"
                  class="btn white-btn-edit default-border-radius btn-lg font-primary-heading w-100"
                  data-bs-toggle="modal"
                  data-bs-target="#UserGuideModal">
            User Guide: Managing Members
          </button>
        </div>

        <!-- UPDATE LOG -->
        <div class="table-responsive log-scroll-container" style="max-height: 600px; overflow-y:auto;">
          <table class="table table-bordered table-striped border-primary border-legion-blue mb-0">
            <thead>
              <tr>
                <th colspan="4"
                    class="bg-white text-black border-white text-center h4 font-secondary-heading">
                    Member Update Log
                </th>
              </tr>

              <tr>
                <th class="bg-legion-blue text-white border-white font-secondary-body">Member(s)</th>
                <th class="bg-legion-blue text-white border-white font-secondary-body">Updated By</th>
                <th class="bg-legion-blue text-white border-white font-secondary-body">Change Type</th>
                <th class="bg-legion-blue text-white border-white font-secondary-body">Timestamp</th>
              </tr>
            </thead>

            <tbody>
              <% @user_versions.each do |v| %>
                <tr class="border border-legion-blue">
                  <td class="font-secondary-subheading"><%= v.user.present? ? v.user.full_name : "(multiple)" %></td>
                  <td class="font-secondary-subheading"><%= version_actor_name(v) %></td>
                  <td class="font-secondary-subheading"><%= version_change_label(v) %></td>
                  <td class="font-secondary-subheading">
                    <%= v.created_at.in_time_zone("Central Time (US & Canada)")
                          .strftime("%B %d, %Y at %I:%M %p") %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

      </div>
    </div>

    <!-- RIGHT COLUMN (search + table) -->
    <div class="col-md-7 bg-dark-navy text-white py-4 min-vh-100">
      <div class="default-padding-right">

        <!-- SEARCH BAR (mockup-style) -->
        <div class="bg-white p-3 mb-3 default-border-radius">
          <%= form_with url: users_path, method: :get, local: true,
                        class: "row g-2 align-items-center text-legion-blue",
                        id: "user-search-form" do %>

            <div class="col-auto fw-bold font-secondary-body">Search For:</div>

            <div class="col">
              <%= text_field_tag :q, params[:q],
                  placeholder: "name, email, role, status, position, major, grad year",
                  class: "form-control" %>
              <%= hidden_field_tag :show_inactive, (@show_inactive ? 1 : 0) %>
            </div>

            <div class="col-auto d-flex gap-2">
              <%= submit_tag "Search",
                  class: "btn btn-gold text-dark-navy default-border-radius font-secondary-body" %>

              <button type="button"
                      id="top-bulk-edit"
                      class="btn btn-gold text-dark-navy default-border-radius font-secondary-body">
                Edit Selected Users
              </button>
            </div>
          <% end %>
        </div>

        <!-- MEMBERS TABLE -->
        <div class="table-responsive">
          <table class="table table-dark table-striped align-middle members-table">
            <thead class="text-white">
              <tr>
                <th class="text-center" style="width:48px;">
                  <input type="checkbox" id="check-all">
                </th>
                <th>Member-to-view</th>
                <th>Email</th>
                <th>Role</th>
                <th>Position</th>
                <th>Status</th>
                <th>Total Hours</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td class="text-center">
                    <%= check_box_tag "user_ids[]",
                        user.id,
                        false,
                        class: "user-checkbox form-check-input" %>
                  </td>

                  <td>
                    <%= link_to user.full_name,
                                user_path(user),
                                class: "text-white text-decoration-underline" %>
                  </td>

                  <td><%= user.email %></td>
                  <td><span class="badge bg-secondary"><%= user.role.humanize %></span></td>
                  <td><%= user.position.presence || "-" %></td>

                  <td>
                    <span class="badge <%= user.active? ? 'bg-success' : 'bg-secondary' %>">
                      <%= user.status.humanize %>
                    </span>
                  </td>

                  <td><%= number_with_precision(user[:total_hours].to_f, precision: 1) %></td>

                  <td class="d-flex gap-2">
                    <%= link_to "Edit",
                        edit_user_path(user),
                        class: "btn btn-gold btn-sm text-dark-navy" %>
                    <!-- DELETE REMOVED -->
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- BOTTOM BULK EDIT (same as mockup) -->
        <%= form_with url: bulk_edit_users_path,
                      method: :get,
                      local: true,
                      id: "bulk-edit-form" do %>
          <div id="bulk-edit-selected"></div>
          <%= submit_tag "Edit Selected Users",
              class: "btn btn-gold text-dark-navy mt-2" %>
        <% end %>

      </div>
    </div>

  </div>
</div>

<script>
  // Select all
  document.getElementById("check-all")?.addEventListener("change", (e) => {
    document.querySelectorAll(".user-checkbox")
            .forEach(cb => cb.checked = e.target.checked);
  });

  function pushSelectedToHiddenForm() {
    const holder = document.getElementById("bulk-edit-selected");
    holder.innerHTML = "";
    document.querySelectorAll(".user-checkbox:checked").forEach(cb => {
      const input = document.createElement("input");
      input.type = "hidden";
      input.name = "user_ids[]";
      input.value = cb.value;
      holder.appendChild(input);
    });
  }

  document.getElementById("top-bulk-edit")?.addEventListener("click", () => {
    pushSelectedToHiddenForm();
    document.getElementById("bulk-edit-form").submit();
  });
</script>

