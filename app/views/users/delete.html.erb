<div class="container-fluid bg-dark-gray-blue text-white py-3">
  <h1 class="text-center font-primary-title">Delete User</h1>
</div>
<div class="container-fluid bg-gold py-1"></div>

<div class="container-fluid bg-dark-navy text-white pt-4 pb-5 min-vh-100">
  <div class="default-padding">

    <div class="event-card p-3">
      <p class="mb-3">
        Are you sure you want to delete <strong><%= @user.full_name %></strong>? This action cannot be undone.
      </p>

      <%= form_for @user, method: :delete do |f| %>
        <%= f.submit "Confirm Delete", class: "btn btn-gold text-dark-navy default-border-radius" %>
      <% end %>

      <div class="mt-3">
        <%= link_to 'Back', user_path(@user), class: "btn btn-outline-light default-border-radius" %>
      </div>
    </div>

  </div>
</div>
<div class="container-fluid bg-gold py-1"></div>

