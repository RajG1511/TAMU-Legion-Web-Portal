<%= render "shared/page_header", title: "Delete User", back_path: users_path %>

<div class="page-wrap d-flex align-items-start pt-5 pb-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-7">
        <div class="admin-card p-4">
          <div class="d-flex align-items-center gap-3 mb-3">
            <div class="confirm-hero">!</div>
            <div>
              <h4 class="section-title mb-1">Confirm deletion</h4>
              <div class="text-muted">This cannot be undone.</div>
            </div>
          </div>
          <p>Are you sure you want to delete <strong><%= @user.first_name %> <%= @user.last_name %></strong>?</p>
          <div class="d-flex gap-2">
            <%= button_to "Delete user", user_path(@user), method: :delete, class: "btn btn-danger" %>
            <%= link_to "Cancel", users_path, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

