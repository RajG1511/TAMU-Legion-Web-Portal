<!-- Header -->
<div class="container-fluid bg-dark-gray-blue text-white py-3">
  <h1 class="text-center font-primary-title">Delete User</h1>
</div>
<div class="container-fluid bg-gold py-1"></div>

<div class="container-fluid bg-dark-navy text-white py-4 min-vh-100">
  <div class="default-padding">
    <div class="bg-dark-navy p-3 border border-white">
      <p>
        Are you sure you want to delete
        <strong><%= @user.full_name %></strong>? This action cannot be undone.
      </p>

      <%= form_for @user, method: :delete do |f| %>
        <%= f.submit "Confirm Delete", class: "btn btn-gold text-dark-navy me-2" %>
      <% end %>

      <%= link_to "Back", users_path, class: "btn btn-outline-light mt-2" %>
    </div>
  </div>
</div>

