<!-- Header -->
<div class="container-fluid bg-dark-gray-blue text-white py-3">
  <h1 class="text-center font-primary-title"><%= @user.full_name %>’s Profile</h1>
</div>
<div class="container-fluid bg-gold py-1"></div>

<div class="container-fluid bg-dark-navy text-white py-4 min-vh-100">
  <div class="default-padding">
    <div class="bg-white text-legion-blue p-4 default-border-radius" style="max-width: 900px;">
      <div class="row">
        <div class="col-md-8">
          <dl class="row">
            <dt class="col-sm-4">Email</dt><dd class="col-sm-8"><%= @user.email %></dd>
            <dt class="col-sm-4">First name</dt><dd class="col-sm-8"><%= @user.first_name %></dd>
            <dt class="col-sm-4">Last name</dt><dd class="col-sm-8"><%= @user.last_name %></dd>
            <dt class="col-sm-4">Graduation year</dt><dd class="col-sm-8"><%= @user.graduation_year %></dd>
            <dt class="col-sm-4">Major</dt><dd class="col-sm-8"><%= @user.major %></dd>
            <dt class="col-sm-4">T-Shirt size</dt><dd class="col-sm-8"><%= @user.t_shirt_size %></dd>
            <dt class="col-sm-4">Status</dt><dd class="col-sm-8"><%= @user.status.humanize %></dd>
            <dt class="col-sm-4">Position</dt><dd class="col-sm-8"><%= @user.position %></dd>
            <dt class="col-sm-4">Role</dt><dd class="col-sm-8"><%= @user.role.humanize %></dd>
            <dt class="col-sm-4">Joined</dt><dd class="col-sm-8"><%= @user.created_at.strftime("%B %d, %Y") %></dd>
          </dl>
        </div>
        <div class="col-md-4">
          <% if @user.headshot.present? %>
            <%= image_tag @user.headshot, class: "img-fluid border" %>
          <% end %>
        </div>
      </div>

      <div class="mt-3">
        <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-gold text-dark-navy me-2" %>
        <%= link_to 'Delete', delete_user_path(@user), class: "btn btn-outline-danger" %>
      </div>

      <hr class="my-4">

      <h2 class="h5">Submitted Services</h2>
      <% if @user.services.any? %>
        <ul class="mb-0">
          <% @user.services.each do |service| %>
            <li>
              <strong><%= service.name %></strong> — <%= service.status %>
              (<%= service.hours %> hours on <%= service.date_performed %>)
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="mb-0">No services submitted yet.</p>
      <% end %>
    </div>
  </div>
</div>

