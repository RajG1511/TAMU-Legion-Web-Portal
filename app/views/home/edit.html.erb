<!-- app/views/home/edit.html.erb -->
<% content_for :title, "Edit Home" %>

<h1>Edit Home Page</h1>

<%= form_with url: home_path, method: :patch, local: true do |f| %>
  <div class="card p-3 mb-3">
    <h3>Hero Badge (HTML)</h3>
    <%= text_area_tag "home_page[hero_badge_html]", @sections["hero_badge_html"], rows: 4, class: "form-control" %>
  </div>

  <div class="card p-3 mb-3">
    <h3>Who we are — Title</h3>
    <%= text_field_tag "home_page[who_we_are_title]", @sections["who_we_are_title"], class: "form-control" %>
    <h3 class="mt-3">Who we are — Body (HTML)</h3>
    <%= text_area_tag "home_page[who_we_are_body_html]", @sections["who_we_are_body_html"], rows: 6, class: "form-control" %>
  </div>

  <div class="card p-3 mb-3">
    <h3>Partner — Title</h3>
    <%= text_field_tag "home_page[partner_title]", @sections["partner_title"], class: "form-control" %>
    <h3 class="mt-3">Partner — Body (HTML)</h3>
    <%= text_area_tag "home_page[partner_body_html]", @sections["partner_body_html"], rows: 6, class: "form-control" %>
  </div>

  <div class="card p-3 mb-3">
    <h3>Footer — Diversity Title</h3>
    <%= text_field_tag "home_page[footer_diversity_title]", @sections["footer_diversity_title"], class: "form-control" %>
    <h3 class="mt-3">Footer — Diversity Body (HTML)</h3>
    <%= text_area_tag "home_page[footer_diversity_body_html]", @sections["footer_diversity_body_html"], rows: 5, class: "form-control" %>
  </div>

  <%= f.submit "Save", class: "btn btn-navy" %>
  <%= link_to "Cancel", root_path, class: "btn btn-outline-light", style: "margin-left:8px" %>
<% end %>

