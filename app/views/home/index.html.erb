<!-- app/views/home/index.html.erb -->
<% content_for :title, "Home" %>

<div class="wix-top-line"></div>

<!-- HERO -->
<section class="hero">
  <div class="hero__image" role="img" aria-label="Legion Members"></div>
  <div class="hero__badge">
    <div class="hero__badge-inner">
      <%= raw home_section("hero_badge_html") %>
    </div>
  </div>
</section>

<!-- WHO WE ARE -->
<section class="who-we-are">
  <div class="who__content">
    <h2 class="who__title"><%= home_section("who_we_are_title") %></h2>
    <div class="who__rule"></div>
    <p class="who__body"><%= raw home_section("who_we_are_body_html") %></p>
    <%= link_to "Learn More", resources_path, class: "btn btn-navy" %>
  </div>
  <div class="who__watermark" aria-hidden="true"></div>
</section>

<!-- PARTNER -->
<section class="partner">
  <div class="partner__container">
    <div class="partner__logo">
      <img src="/Logos/partner.png" alt="Camp Sweeney logo">
    </div>
    <div class="partner__text">
      <h2 class="partner__title"><%= home_section("partner_title") %></h2>
      <p class="partner__body"><%= raw home_section("partner_body_html") %></p>
      <%= link_to "Philanthropy", resources_path, class: "btn btn-navy" %>
    </div>
  </div>
</section>

<!-- FOOTER STRIP -->
<footer class="legion-footer">
  <div class="footer__container">
    <h3 class="footer__title"><%= home_section("footer_diversity_title") %></h3>
    <p class="footer__body"><%= raw home_section("footer_diversity_body_html") %></p>

    <div class="footer__social">
      <a href="https://www.instagram.com" target="_blank" rel="noopener" aria-label="Instagram" class="footer__icon">◦</a>
      <a href="https://www.linkedin.com"  target="_blank" rel="noopener" aria-label="LinkedIn"   class="footer__icon">in</a>
    </div>

    <% if current_user&.exec? || current_user&.president? %>
      <div class="footer__edit">
        <%= link_to "Edit Home Page", edit_home_path, class: "btn btn-outline-light" %>
      </div>
    <% end %>

    <div class="footer__bottom">
      <span>© <%= Time.current.year %> by LEGION Men’s Organization</span>
      <span class="sep">|</span>
      <%= link_to "Contact Us", "mailto:legion@example.edu", class: "footer__link" %>
    </div>
  </div>
</footer>

