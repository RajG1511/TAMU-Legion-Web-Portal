<% content_for :title, "Home" %>

<% if Announcement.current.message.present? %>
  <div class="alert alert-warning text-center">
    <strong>Announcement:</strong> <%= Announcement.current.message %>
  </div>
<% end %>

<!-- HERO SECTION -->
<section class="home-hero">
  <div class="home-hero-bg" style="background-image:url('/Photos/House.jpg');"></div>
  
  <div class="home-hero-content">
    <div class="hero-badge">
      <h1 class="hero-badge-title">Legion</h1>
      <p class="hero-badge-subtitle">Lead. Serve. Build community.</p>
      <div class="hero-badge-divider"></div>
      <div class="hero-badge-text">
        <%= raw @sections["hero_badge_html"] %>
      </div>
      
      <div class="hero-buttons">
        <%= link_to "Apply Now", recruitment_path, class: "btn-hero btn-apply" %>
        <%= link_to "Learn More", about_path, class: "btn-hero btn-learn" %>
      </div>
    </div>
  </div>
</section>

<!-- WHO WE ARE SECTION -->
<section class="home-section bg-white">
  <div class="section-container">
    <div class="who-content">
      <h2 class="section-heading"><%= @sections["who_we_are_title"] %></h2>
      <div class="section-underline"></div>
      
      <div class="who-text">
        <%= raw @sections["who_we_are_body_html"] %>
      </div>
      
      <%= link_to "Learn More", about_path, class: "btn-section" %>
    </div>
    
    <!-- Subtle watermark -->
    <div class="legion-helmet-watermark"></div>
  </div>
</section>

<!-- OUR PARTNER SECTION -->
<section class="home-section bg-gray">
  <div class="section-container">
    <div class="partner-grid">
      <div class="partner-logo-container">
        <img src="/Logos/partner.png" alt="Camp Sweeney" class="partner-logo">
      </div>
      
      <div class="partner-content">
        <h2 class="section-heading text-white"><%= @sections["partner_title"] %></h2>
        <div class="section-underline"></div>
        
        <div class="partner-text">
          <%= raw @sections["partner_body_html"] %>
        </div>
        
        <%= link_to "Philanthropy", philanthropy_path, class: "btn-section btn-white" %>
      </div>
    </div>
  </div>
</section>

<!-- DIVERSITY STATEMENT FOOTER -->
<section class="home-footer">
  <div class="footer-container">
    <h3 class="footer-title"><%= @sections["footer_diversity_title"] %></h3>
    <div class="footer-text">
      <%= raw @sections["footer_diversity_body_html"] %>
    </div>
    
    <% if current_user&.exec? || current_user&.president? %>
      <div class="footer-edit">
        <%= link_to "Edit Home Page", edit_home_path, class: "btn btn-outline-light btn-sm" %>
      </div>
    <% end %>
  </div>
</section>

<!-- Gold Divider -->
<div class="gold-divider"></div>
