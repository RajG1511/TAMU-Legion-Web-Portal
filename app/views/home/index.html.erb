<% content_for :title, "Legion" %>

<!-- HERO -->
<section class="bg-dark-navy text-white">
  <div class="container section-pad">
    <div class="row align-items-center">
      <div class="col-lg-8">
        <div class="display-5 fw-bold mb-3">
          <%= raw @sections.find { _1[:key] == "hero" }[:version_html] %>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- ABOUT -->
<section class="bg-white text-legion-blue">
  <div class="container section-pad">
    <div class="row">
      <div class="col-lg-10 col-xl-8">
        <h2 class="mb-3">About Legion</h2>
        <div class="fs-5">
          <%= raw @sections.find { _1[:key] == "about" }[:version_html] %>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- RECRUITMENT -->
<section class="bg-legion-blue text-white">
  <div class="container section-pad">
    <div class="row">
      <div class="col-lg-8">
        <h2 class="mb-3">Recruitment Schedule</h2>
        <div class="bg-dark bg-opacity-10 rounded p-3">
          <%= raw @sections.find { _1[:key] == "recruitment" }[:version_html] %>
        </div>
      </div>
      <div class="col-lg-4 mt-4 mt-lg-0">
        <%# pull "Apply Now" URL if you include it in the hero HTML or add a static link here %>
      </div>
    </div>
  </div>
</section>

<!-- COMMITTEES (3 polished cards) -->
<section class="bg-white text-legion-blue">
  <div class="container section-pad">
    <h2 class="mb-4">Committees</h2>
    <div class="row g-4">
      <%# your text blob on the left %>
      <div class="col-lg-4">
        <div class="fs-6">
          <%= raw @sections.find { _1[:key] == "committees" }[:version_html] %>
        </div>
      </div>

      <%# three soft cards to echo Wix feel %>
      <div class="col-md-4 col-lg-4">
        <div class="card card-ghost h-100">
          <div class="card-body">
            <h5 class="card-title">Events</h5>
            <p class="card-text mb-0">Plan campus events and community outreach.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-lg-4">
        <div class="card card-ghost h-100">
          <div class="card-body">
            <h5 class="card-title">Resources</h5>
            <p class="card-text mb-0">Build internal resources for membersâ€™ growth.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-lg-4">
        <div class="card card-ghost h-100">
          <div class="card-body">
            <h5 class="card-title">Services</h5>
            <p class="card-text mb-0">Support operations, partnerships, and logistics.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- FAQ (accordion for readability) -->
<section class="bg-polo-slate text-white">
  <div class="container section-pad">
    <h2 class="mb-4">FAQ</h2>

    <div class="accordion" id="faqAcc">
      <div class="accordion-item">
        <h2 class="accordion-header" id="q1h">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#q1" aria-expanded="false" aria-controls="q1">
            Frequently Asked Questions
          </button>
        </h2>
        <div id="q1" class="accordion-collapse collapse" aria-labelledby="q1h" data-bs-parent="#faqAcc">
          <div class="accordion-body">
            <%= raw @sections.find { _1[:key] == "faq" }[:version_html] %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- CONTACT -->
<section class="bg-dark-navy text-white">
  <div class="container section-pad">
    <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3">
      <div>
        <h2 class="mb-1">Questions?</h2>
        <div class="fs-5">
          <%= raw @sections.find { _1[:key] == "contact" }[:version_html] %>
        </div>
      </div>
      <% if current_user&.exec? %>
        <%= link_to "Edit Home Page", edit_home_path, class: "btn btn-outline-light" %>
      <% end %>
    </div>
  </div>
</section>

