<h1>Welcome to the Service Demo</h1>

<% if user_signed_in? %>
  <p>Hello, <%= current_user.email %> (Role: <%= current_user.role %>)</p>

  <% if current_user.role == "member" %>
    <%= link_to "Submit Service", new_service_path %> |
    <%= link_to "My Services", my_services_services_path %>
  <% elsif current_user.role == "exec" %>
    <%= link_to "Review Services", services_path %>
  <% end %>

  <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete } %>
<% else %>
  <p>Please log in to continue.</p>
  <%= link_to "Login", new_user_session_path %>
<% end %>