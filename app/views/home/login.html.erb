<div class="container-fluid bg-legion-blue min-vh-100 d-flex flex-column align-items-center text-center p-0">

    <!-- Flash banner at top of container -->
    <% flash.each do |key, message| %>
        <div class="login-flash alert alert-dismissible fade show font-primary-heading w-100 text-center mb-0" role="alert">
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% end %>

    <!-- Login content -->
    <div class="d-flex flex-column justify-content-center align-items-center flex-grow-1 w-100">
    
        <!-- Logo -->
        <img src="/Logos/legion_seal.png" alt="TAMU Legion Seal" class="mb-4" width="120">

        <!-- Page Heading -->
        <h1 class="display-4 mb-0 font-primary-title text-white">Guest Area</h1>
        <p class="lead mb-5 font-secondary-subheading text-white">Please sign in with your tamu.edu account.</p>

        <!-- Google Sign-In Button -->
        <%= button_to user_google_oauth2_omniauth_authorize_path, 
            method: :post,  data: { turbo: false }, 
            class: "btn btn-lg px-5 py-3 mb-0 white-btn" do %>
                Sign in with Google
        <% end %>

        <!-- Not Registered? Link -->
        <p class="mt-4 font-secondary-subheading text-white"> Not Registered? 
            <a href="#" data-bs-toggle="modal" data-bs-target="#registerInfoModal" 
            class="text-gold fw-bold text-decoration-underline"> Click here</a>
        </p>

    </div>
</div>
